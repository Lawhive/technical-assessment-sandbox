{
	"name": "Node.js & TypeScript",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pnpm install && pnpm run build",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "pnpm run dev"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [3000]
}
